{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "eslint:recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "settings": {
        "import/extensions": [
            ".js",
            ".ts"
        ]
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-console": [
            "error",
            {
               "allow": [ "warn", "error" ]
            }
        ],
        "import/prefer-default-export": "warn",
        "no-unused-vars": "warn",
        "no-throw-literal": "warn",
        "no-unsafe-optional-chaining": "warn",
        "dot-notation": "warn",
        "import/no-unresolved": [
            "warn",
            {
                "ignore": [ "\\.js$" ]
            }
        ],
        "import/extensions" : [
            "error",
            "always",
            {
                "ignorePackages": true
            }
        ],
        "no-param-reassign": "warn"
    }
}
